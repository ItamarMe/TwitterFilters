{
    "manifest_version": 3,
    "name": "Twitter Filters",
    "version": "1.0",
    "description": "Filters Media and Reposts on Twitter to improve browsing experience.",
    "icons": {
        "16": "images/16.png",
        "128": "images/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*",
                "*://www.x.com/*"
            ],
            "js": [
                "media/mediaContent.js",
                "reposts/removeReposts.js"
            ],
            "css": [
                "reposts/removeReposts.css"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_icon": {
            "16": "images/16.png",
            "128": "images/128.png"
        },
        "default_title": "TwitterFilters",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "media/cleanFilters.js",
                "media/injected.js",
                "media/gifsFilter.js",
                "media/repliesFilter.js"
            ],
            "matches": [
                "*://x.com/*",
                "*://www.x.com/*"
            ]
        }
    ]
}